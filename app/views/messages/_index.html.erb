<div>
  <% @messages.each do |message| %>
    <div class="ui items">
      <div class="item">
        <a class="ui tiny image"></a>
        <div class="content">
          <a class="header"><%= message.user.name %></a>
          <div class="description">
            <p><%= message.body %></p>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
