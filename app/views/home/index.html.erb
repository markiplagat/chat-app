<h3 class="ui center aligned medium icon header">
  <i class="circular blue rocketchat icon"></i>
  <% if user_signed_in? %>
     Hello <%= current_user.name %>
  <% else %>
     Hello
  <% end %>
</h3>

<div class="ui two column grid">
  <div class="twelve wide column">
    <div class="ui fluid raised card chatbox">
      <div class="content">
        <div class="ui feed">
          <h4 class="ui header">Real Time Chat</h4>
          <div class="event">
            <div class="content">
              <div class="summary">
                <%= render 'messages/index' %>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="extra content">
        <%= form_for(@message, html: {class: "ui reply form", role: "form"}, url: @message) do |f| %>
          <div class="field">
            <div class="ui fluid icon input">
              <%= f.text_field :body %>
              <%= f.hidden_field :user_id, value: current_user.id %>
              <%= f.button '<i class="bordered inverted orange edit icon"></i>'.html_safe %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>


  <div class="four wide column">
    <div class="ui fluid raised card chatbox">
      <div class="content">
        <div class="ui inverted vertical menu">
          <a class="active item">
            <%= link_to "Home", root_path, class: "active item"%>
          </a>
          <a class="item">
            Messages
          </a>
          <a class="item">
            Friends
          </a>
        </div>
      </div>
    </div>
  </div>
</div>
